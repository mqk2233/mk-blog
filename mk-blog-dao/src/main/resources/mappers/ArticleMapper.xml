<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mk.blog.mapper.ArticleMapper">

  <!-- 通用查询映射结果 -->
  <resultMap id="BaseResultMap" type="com.mk.blog.entity.Article">
    <id column="id" property="id" />
    <result column="category_id" property="categoryId" />
    <result column="title" property="title" />
    <result column="img" property="img" />
    <result column="content_md" property="contentMd" />
    <result column="content_html" property="contentHtml" />
    <result column="status" property="status" />
    <result column="write_time" property="writeTime" />
    <result column="modify_time" property="modifyTime" />
    <result column="is_prohibit" property="isProhibit" />
  </resultMap>
  <!-- 通用查询结果列 -->
  <sql id="Base_Column_List">
  id, category_id, title, img, content_md, content_html, status, write_time, modify_time, is_prohibit
  </sql>
  <select id="selectAll" resultMap="BaseResultMap">
    SELECT <include refid="Base_Column_List"/> from article
  </select>
</mapper>